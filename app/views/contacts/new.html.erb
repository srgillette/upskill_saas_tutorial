<div class="container">
    <h2 class="text-center">Contact Us</h2>

    <%= form_for "/contacts" do |f|  %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        
        <%= f.label :email %>
        <%= f.text_field :email %>
        
        <%= f.label :message %>
        <%= f.text_area :message %>
        
        <%= f.submit 'Submit' %>
    <% end %>
</div>